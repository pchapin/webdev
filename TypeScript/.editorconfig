# .editorconfig for TypeScript/Web projects

root = true

# Let Git deal with line ending issues in a cross-platform way.
[*]
charset = utf-8
#end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.ts]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.html]
indent_size = 2
